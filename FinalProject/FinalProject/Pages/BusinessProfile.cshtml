    <h1>@Model.Business.BusinessName</h1>
    <h3>
        Type: @Html.DisplayFor(model => model.Business.BusinessType)
    </h3>

    <h3>
        Country: @Html.DisplayFor(model => model.Business.BusinessCountry)
    </h3>

    <h3>
        Number Employees: @Html.DisplayFor(model => model.Business.NumberEmployees)
    </h3>

    <h3>
        Business size: @Html.DisplayFor(model => model.Business.DisplayBusinessSize)
    </h3>

<hr />


<h2>Contractors under this business</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Contractors[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contractors[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contractors[0].StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contractors[0].PlannedEndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contractors[0].ActualEndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contractors[0].WorkStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contractors[0].Rating)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contractors[0].Project)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Contractors)
            {
                <tr>
                    <td>
                        <a asp-page="/ContractorProfile" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.FirstName)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlannedEndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ActualEndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WorkStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Project.ProjectName)
                    </td>
                </tr>
            }
        </tbody>
    </table>



