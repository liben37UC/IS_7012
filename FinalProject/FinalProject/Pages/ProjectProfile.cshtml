<h1>@Model.Project.ProjectName</h1>



<h3>
    Start Date: @Html.DisplayFor(model => model.Project.StartDate)
</h3>

<h3>
    Planned End Date: @Html.DisplayFor(model => model.Project.PlannedEndDate)
</h3>

<h3>
    Actual End Date: @Html.DisplayNameFor(model => model.Project.ActualEndDate)
</h3>

<h3>
    Budget: @Html.DisplayNameFor(model => model.Project.Budget)
</h3>

<h3>
    RunningTotalCost: @Html.DisplayNameFor(model => model.Project.RunningTotalCost)
</h3>

<h3>
    Budget - Running Costs: @Html.DisplayNameFor(model => model.Project.BudgetRunning)
</h3>

<h3>
    Department Name: @Html.DisplayNameFor(model => model.Project.DepartmentName)
</h3>

<h3>
    Project Size: @Html.DisplayNameFor(model => model.Project.DisplayProjectSize)
</h3>

<hr />
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contractors[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contractors[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contractors[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contractors[0].PlannedEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contractors[0].ActualEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contractors[0].WorkStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contractors[0].Rating)
            </th>
            <th>
                Business Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Contractors)
        {
        <tr>
            <td>
                <a asp-page="/ContractorProfile" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.FirstName)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlannedEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActualEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Business.BusinessName)
            </td>
        </tr>
        }
    </tbody>
</table>

