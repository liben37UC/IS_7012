<h2>End Project</h2>


<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form method="post" style="margin-top: 50px;">
            
            <div class="form-group">
                <label class="control-label">Project Name</label>
                <div>
                    <p class="form-control-static">@Model.Project.ProjectName</p>
                </div>
            </div>
            
            <div class="form-group">
                <label class="control-label">Start Date</label>
                <div>
                    <p class="form-control-static">@Model.Project.StartDate.ToString("MM-dd-yyyy")</p>
                </div>
            </div>
            
            @if(Model.Project.ActualEndDate < DateTime.Today) {
                    <div class="form-group">
                    <label class="control-label">End Date</label>
                    <div>
                        <p class="form-control-static">@Model.Project.ActualEndDate.Value.ToString("MM-dd-yyyy")</p>
                    </div>
                </div>
                <div class="alert alert-warning">
                    <p>This Project is no longer in operation</p>
                </div>
                

            } else {


                <input type="hidden" asp-for="EndProject.ProjectId" />
                <div class="form-group">
                    <label asp-for="EndProject.EndDate" class="control-label"></label>
                    <input asp-for="EndProject.EndDate" class="form-control" />
                    <span asp-validation-for="EndProject.EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="End Project" class="btn btn-danger" />
                </div>
            }
        </form>
    </div>
</div>

