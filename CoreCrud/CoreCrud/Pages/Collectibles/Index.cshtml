@page
@model CoreCrud.Pages.Collectibles.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Collectible[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Collectible[0].CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Collectible[0].Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Collectible[0].Electronic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Collectible[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Collectible[0].Manufacturer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Collectible) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Electronic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer.ID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
