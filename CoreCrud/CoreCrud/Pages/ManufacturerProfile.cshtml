@page
@model CoreCrud.Pages.ManufacturerProfileModel
@{
    ViewData["Title"] = "ManufacturerProfile";
}

<h1>@Model.Manufacturer.ManufacturerName</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Creation Date</th>
            <th>Weight</th>
            <th>Material</th>
            <th>Electronic</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var code in Model.Collectibles)
        {
        <tr>
            <td>@code.Name</td>
            <td>@code.CreationDate</td>
            <td>@code.Weight</td>
            <td>@code.Material</td>

            @if (code.Electronic)
            {
                <td>Yes</td>
            }
            else
            {
                <td>No</td>
            }
        </tr>
        }
    </tbody>
</table>